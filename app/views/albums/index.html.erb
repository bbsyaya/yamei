<div id="niftys" class="niftys">
  <h3 class="niftys_h3">专辑列表
    <%= link_to '添加新专辑', new_album_path ,:class=>"niftys_right" %>
  </h3>
  <div class="album">
    <table>
      <tr>
        <th>标题</th>
         <th colspan="4">编辑菜单</th>
      </tr>

      <% @albums.each do |album| %>
        <tr>
          <td><%=h album.title %></td>
          <td><a href="#" onclick="show_dialog(<%=album.id%>)">添加图片</a></td>
          <td><%= link_to '显示图片', album %></td>
          <td><%= link_to '修改名称', edit_album_path(album) %></td>
          <td><%= link_to '删除', album, :confirm => '确定要删除吗?', :method => :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<%=render :partial=>"photos/ajax_upload",:locals=>{:redirect_url=>"/albums/"}%>